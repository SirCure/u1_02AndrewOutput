<Window x:Class="u1_01AndrewOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u1_01AndrewOutput"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label x:Name="lblTitle" Content="Enter Your Name Please" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="entryFirstName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" TextAlignment="Center" Width="120"/>
        <TextBox x:Name="entryLastName" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="Surname" TextAlignment="Center" Width="120"/>
        <Slider x:Name="sliderAge" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Value="0" Minimum="0" Maximum="125" Width="500" TickPlacement="Both" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="BottomRight"/>
        <Button x:Name="btnShowGreeting" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Enter Name" Click="btnShowGreeting_Click"/>
        <Label x:Name="lblOutput" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </StackPanel>
</Window>
